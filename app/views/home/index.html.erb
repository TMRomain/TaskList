<p>
    <a href="/home/addTask">
        Ajouter une tâche
    </a>
<p>
    Trier par statut :
    <input type="radio" name="status" value="all" checked> Toutes les tâches
    <input type="radio" name="status" value="day"> Tâches du jours
    <input type="radio" name="status" value="future"> Tâches à venir
    <input type="radio" name="status" value="completed"> Tâches terminées


<% @tasks.each do |task| %>
    <li>
        <div class="task">
            <h3 class="task-title"><%= task.title %></h3>
            <p class="task-description"><%= task.desc %></p>
            <div class="task-actions">
                <a href="#">Modifier</a>
                <%= button_to "Destroy this task", { controller: "home", action: "delete", id: task.id }, method: :delete %>
                <input type="checkbox" name="completed" value="completed" <%= task.iscompleted ? "checked" : "" %>>
            </div>
        </li>
<% end %>
